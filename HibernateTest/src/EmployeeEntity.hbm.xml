<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.EmployeeEntity" table="employee" schema="testhibernate">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="firstname">
            <column name="firstname" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="lastname">
            <column name="lastname" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="departmentId">
            <column name="department_id" sql-type="int" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>